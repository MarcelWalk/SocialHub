<Window x:Class="SocialBar.View.TwitterPinDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocialBar.View"
        mc:Ignorable="d"
        Title="Twitter PIN" Height="137" Width="200" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid>
        <TextBox  x:Name="pinInput" Height="25" Margin="22,40,22,0" TextWrapping="Wrap" Text="PIN" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="{x:Null}" BorderBrush="Black" SelectionBrush="#FF4152FF" Width="150" BorderThickness="0,0,0,1" />
        <Label Content="Enter your PIN" Margin="10,10,10,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" Width="150" Height="25" />
        <Button Content="OK" Margin="47,72,47,10" Click="ConfirmClicked" Background="{x:Null}" BorderBrush="#FF4CA800" Foreground="#FF4CA800" Width="100" Height="25" />
    </Grid>
</Window>